<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        android:id="@+id/f_avatar"
        android:layout_marginRight="8dp"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_ticket_defualt"
        android:contentDescription=""
         />


    <TextView
        android:drawableLeft="@drawable/ic_qoute"
        android:textStyle="italic"
        android:layout_toRightOf="@id/f_avatar"
        android:id="@+id/main_gossip_title"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" asadsa dsad sample bird namde the sasdk asd sample sad adasd asda  asd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />



    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toRightOf="@id/f_avatar"
        android:layout_below="@id/main_gossip_title"
        android:id="@+id/main_gossip_elapsed_time"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_time_small"
        android:drawablePadding="@dimen/dp_4"
        android:text="12min Left"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <TextView

            android:textStyle="bold"
            android:id="@+id/f_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="12" />



        <TextView

            android:textStyle="bold"
            android:id="@+id/f_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12" />

    </LinearLayout>



</RelativeLayout>