<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/app_text_size_small"
        android:id="@+id/f_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Sample"
        android:paddingBottom="@dimen/dp_4"
        />

    <TextView
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_qoute"
        android:textStyle="italic"
        android:layout_below="@id/f_name"
        android:id="@+id/main_gossip_title"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=" asadsa dsad sample bird namde the sasdk asd sample sad adasd asda  asd"
        android:textColor="@color/dark_grey"
        />
    <TextView
        android:drawableTint="@color/venu_red"
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_time_small"
        android:gravity="center_vertical"
        android:textSize="@dimen/app_text_size_small"
        android:id="@+id/f_gossip_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 hour left"
        />


    <LinearLayout
        android:layout_below="@id/main_gossip_elapsed_time"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="@dimen/dp_4"
            android:drawableLeft="@drawable/ic_thumb_default"
            android:textStyle="bold"
            android:id="@+id/f_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12" />


        <TextView
            android:layout_marginLeft="30dp"
            android:drawablePadding="@dimen/dp_4"
            android:drawableLeft="@drawable/ic_share_default"
            android:textStyle="bold"
            android:id="@+id/f_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="120m" />

    </LinearLayout>



</LinearLayout>