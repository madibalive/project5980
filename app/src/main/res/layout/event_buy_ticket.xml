<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_marginStart="100dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    app:contentPadding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:padding="@dimen/dp_4"
            android:id="@+id/venu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy with venu"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/venu_flat_dark" />

        <TextView
            android:padding="@dimen/dp_4"
            android:text="@string/a_function_that_creates_a_new_instance_of_the_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_small"
            />

        <TextView
            android:padding="@dimen/dp_4"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/black"
            android:text="Starting price: GH 50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</android.support.v7.widget.CardView>
