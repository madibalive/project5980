<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/md_top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingLeft="@dimen/dp_14"
    android:paddingRight="@dimen/dp_14"
    android:paddingTop="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/md_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alicia James "
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:id="@+id/md_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/md_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#HashTagProftas"
        style="@style/veneTitleText"
        android:padding="0dp"
        android:textSize="@dimen/app_text_size_large"
        />
</LinearLayout>
